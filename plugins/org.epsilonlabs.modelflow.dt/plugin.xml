<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.epsilonlabs.modelflow.dt.editor.ModelFlowEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            extensions="mflow"
            icon="icons/mflow.gif"
            id="org.eclipse.epsilon.efl.dt.editor.ModelFlowEditor"
            name="ModelFlow Language Editor"/>
       <editor
            class="org.epsilonlabs.modelflow.dt.editor.ManagementTraceEditor"
            contributorClass="org.eclipse.epsilon.dt.exeed.ExeedActionBarContributor"
            extensions="mftrace"
            icon="icons/mflow.gif"
            id="org.epsilonlabs.modelflow.dt.editor.ManagementTraceEditor"
            name="ModelFlow Management Trace Editor">
      </editor>     
      <editor
            class="org.epsilonlabs.modelflow.dt.editor.ExecutionTraceEditor"
            contributorClass="org.eclipse.epsilon.dt.exeed.ExeedActionBarContributor"
            extensions="mfexec"
            icon="icons/mflow.gif"
            id="org.epsilonlabs.modelflow.dt.editor.ExecutionTraceEditor"
            name="ModelFlow Execution Trace Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="org.epsilonlabs.modelflow.dt.launch.ModelFlowLaunchConfigurationDelegate"
            icon="icons/mflow.gif"
            id="ModelFlowWorkflow"/>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="org.epsilonlabs.modelflow.dt.launch.ModelFlowLaunchConfigurationDelegate"
            id="org.epsilonlabs.modelflow.dt.launch.ModelFlowLaunchConfigurationDelegate"
            modes="run, debug"
            name="ModelFlow Workflow"/>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.eclipse.epsilon.dt"
            class="org.epsilonlabs.modelflow.dt.wizard.NewModelFlowFileWizard"
            icon="icons/mflow.gif"
            id="org.eclipse.epsilon.efl.dt.wizards.NewModelFlowFileWizard"
            name="ModelFlow Workflow"/>
   </extension>
 <extension
       point="org.eclipse.epsilon.picto.pictoSource">
    <pictoSource
          class="org.epsilonlabs.modelflow.dt.picto.ModelFlowMainPictoSource">
    </pictoSource>
    <pictoSource
          class="org.epsilonlabs.modelflow.dt.picto.ExecutionTracePictoSource">
    </pictoSource>
    <pictoSource
          class="org.epsilonlabs.modelflow.dt.picto.ManagementTracePictoSource">
    </pictoSource>
 </extension>
 <extension
       point="org.eclipse.epsilon.common.dt.moduleImplementation">
    <implementation
          class="org.epsilonlabs.modelflow.ModelFlowModule"
          default="false"
          dialog="org.epsilonlabs.modelflow.dt.launch.ModelFlowModuleConfiguration"
          language="ModelFlow"
          name="Sequential">
    </implementation>
    <implementation
          class="org.epsilonlabs.modelflow.ModelFlowModuleParallel"
          default="false"
          dialog="org.epsilonlabs.modelflow.dt.launch.ModelFlowModuleConfiguration"
          language="ModelFlow"
          name="Parallel">
    </implementation>
 </extension>
 <extension
       point="org.eclipse.debug.ui.launchConfigurationTabGroups">
    <launchConfigurationTabGroup
          class="org.epsilonlabs.modelflow.dt.launch.tabs.ModelFlowLaunchConfigurationTabGroup"
          description="Create a configuration to launch a ModelFlow workflow."
          id="org.epsilonlabs.modelflow.dt.launch.ModelFlowLaunchConfigurationTabGroup"
          type="org.epsilonlabs.modelflow.dt.launch.ModelFlowLaunchConfigurationDelegate">
    </launchConfigurationTabGroup>
 </extension>
 <extension
       point="org.eclipse.epsilon.common.dt.moduleValidator">
    <moduleValidator
          class="org.epsilonlabs.modelflow.dt.validator.ModelFlowModuleValidator">
    </moduleValidator>
 </extension>
 <extension
       point="org.eclipse.epsilon.common.dt.tool">
    <tool
          class="org.epsilonlabs.modelflow.ModelFlowModule"
          defaultName="module">
    </tool>
 </extension>
 <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="Epsilon"
            class="org.epsilonlabs.modelflow.dt.preferences.ModelFlowPreferencePage"
            id="org.epsilonlabs.modelflow.dt.preferences.ModelFlowPreferencePage"
            name="ModelFlow">
      </page>
   </extension>
</plugin>
